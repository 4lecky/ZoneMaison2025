# .htaccess para uploads/ - VERSIÓN FINAL
# Colocar en: ZoneMaison20/uploads/.htaccess

# Denegar acceso directo - forzar uso del manejador download.php
<Files "*">
    Order Deny,Allow
    Deny from all
</Files>

# Permitir acceso solo desde localhost (desarrollo)
<FilesMatch "\.(pdf|doc|docx|jpg|jpeg|png|gif|txt)$">
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Allow from ::1
    Allow from localhost
</FilesMatch>

# Prevenir ejecución de scripts maliciosos
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi|exe|bat)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Desactivar listado de directorios
Options -Indexes